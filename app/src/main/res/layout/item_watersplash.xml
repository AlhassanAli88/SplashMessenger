<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/extra_small_margin_top"
    android:background="@color/gray"
    android:orientation="vertical">

    <!-- Sent Watersplash-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sent_message_watersplash"
        android:background="@color/gray">

    <ImageView
        android:id="@+id/imageSentMessageWatersplash"
        android:layout_width="@dimen/large_width"
        android:layout_height="@dimen/medium_height"
        android:contentDescription="@string/watersplash_sent_message_image_description"
        android:src="@drawable/watersplash_sent_message"
        app:layout_constraintBottom_toBottomOf="@+id/textMessageSentWatersplash"
        app:layout_constraintEnd_toEndOf="@id/textMessageSentWatersplash"
        app:layout_constraintStart_toStartOf="@id/textMessageSentWatersplash"

        app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textMessageSentWatersplash"
            android:layout_width="@dimen/view_bottom_height_sign_up"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_sent_message"
            android:minHeight="@dimen/button_search"
            android:padding="@dimen/small_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/textDateTimeSentWatersplash"
            android:layout_width="@dimen/view_bottom_height_sign_up"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin_top"
            android:text="@string/date_time"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintEnd_toEndOf="@+id/textMessageSentWatersplash"
            app:layout_constraintTop_toBottomOf="@+id/textMessageSentWatersplash" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recieved_message_watersplash"
        android:background="@color/gray">

    <!-- Received Watersplash-->

        <ImageView
            android:id="@+id/imageReceivedMessageWatersplash"
            android:layout_width="@dimen/large_width"
            android:layout_height="@dimen/small_height"
            android:contentDescription="@string/watersplash_received_message_image_description"
            android:src="@drawable/watersplash_received_message"
            app:layout_constraintBottom_toBottomOf="@+id/textMessageReceivedWatersplash"
            app:layout_constraintEnd_toEndOf="@+id/textMessageReceivedWatersplash"
            app:layout_constraintHorizontal_bias="0.669"
            app:layout_constraintStart_toStartOf="@+id/textMessageReceivedWatersplash" />

        <TextView
            android:id="@+id/textMessageReceivedWatersplash"
            android:layout_width="@dimen/view_bottom_height_sign_up"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/background_received_message"
            android:minHeight="@dimen/button_search"
            android:padding="@dimen/small_padding"
            android:textColor="@color/blue"
            android:textSize="@dimen/medium_text_size"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.75" />

        <TextView
            android:id="@+id/textDateTimeReceivedWatersplash"
            android:layout_width="@dimen/view_bottom_height_sign_up"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin_top"
            android:text="@string/date_time"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"

            app:layout_constraintStart_toStartOf="@+id/textMessageReceivedWatersplash"
            app:layout_constraintTop_toBottomOf="@+id/textMessageReceivedWatersplash" />

</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>