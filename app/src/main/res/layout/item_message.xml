<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/extra_small_margin_top"
    android:background="@color/gray"
    android:orientation="vertical">

    <!-- Sent message-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sent_message_basic">

        <TextView
            android:id="@+id/textMessageSent"
            android:layout_width="@dimen/view_bottom_height_sign_up"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_sent_message"
            android:minHeight="@dimen/button_search"
            android:padding="@dimen/small_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
        android:id="@+id/textDateTimeSent"
        android:layout_width="@dimen/view_bottom_height_sign_up"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/extra_small_margin_top"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMessageSent"
            android:text="@string/date_time"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Received message-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recived_message_basic">

        <TextView
            android:id="@+id/textMessageReceived"
            android:layout_width="@dimen/view_bottom_height_sign_up"
            android:layout_height="wrap_content"
            android:background="@drawable/background_received_message"
            android:minHeight="@dimen/button_search"
            android:padding="@dimen/small_padding"
            android:textColor="@color/blue"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.75" />

        <TextView
            android:id="@+id/textDateTimeReceived"
            android:layout_width="@dimen/view_bottom_height_sign_up"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin_top"
            android:text="@string/date_time"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textMessageReceived" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
